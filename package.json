{
  "name": "@adaptivekind/graph-schema",
  "version": "0.1.1",
  "description": "JSON schema for a graph along with TypeScript types",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rollup -c  --failAfterWarnings",
    "dev": "rollup -c --watch",
    "clean": "rm -rf dist",
    "eslint": "eslint",
    "eslint:fix": "eslint",
    "lint": "npm run prettier && npm run eslint",
    "lint:fix": "npm run prettier:fix && npm run eslint:fix",
    "prettier": "npx prettier --check .",
    "prettier:fix": "npx prettier --write .",
    "generate-json-schema": "ts-json-schema-generator --path 'src/*.ts' --type 'Graph' -o graph.schema.json",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:build": "node test/build/test-build.mjs",
    "test:watch": "jest --watch",
    "prepare": "husky"
  },
  "keywords": [
    "graph",
    "schema",
    "typescript",
    "json-schema"
  ],
  "author": "adaptivekind",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@semantic-release/npm": "^12.0.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.12",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "ajv": "^8.17.1",
    "eslint": "^9.30.1",
    "husky": "^9.1.7",
    "jest": "^30.0.4",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "rollup": "^4.44.2",
    "rollup-plugin-dts": "^6.2.1",
    "ts-jest": "^29.4.0",
    "ts-json-schema-generator": "^2.4.0",
    "typescript": "^5.8.3"
  },
  "files": [
    "dist/**/*"
  ]
}
