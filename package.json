{
  "name": "@adaptivekind/graph-schema",
  "version": "0.1.0",
  "description": "JSON schema for a graph along with TypeScript types",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "eslint": "eslint",
    "eslint:fix": "eslint",
    "lint": "npm run prettier && npm run eslint",
    "lint:fix": "npm run prettier:fix && npm run eslint:fix",
    "prettier": "npx prettier --check .",
    "prettier:fix": "npx prettier --write .",
    "generate-json-schema": "ts-json-schema-generator --path 'src/*.ts' --type 'Graph' -o graph.schema.json",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepare": "husky"
  },
  "keywords": [
    "graph",
    "schema",
    "typescript",
    "json-schema"
  ],
  "author": "adaptivekind",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "ajv": "^8.17.1",
    "eslint": "^8.0.0",
    "husky": "^9.1.7",
    "jest": "^29.0.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "ts-jest": "^29.0.0",
    "ts-json-schema-generator": "^2.4.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist/**/*"
  ]
}
